<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spurinnovations.spurinnovations.MainView">

    <TextView
        android:text="STATUS"
        android:id="@+id/maintext"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:text="Speed"
        android:width="100dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/maintext"
        android:layout_marginBottom="20dp"
        android:onClick="setSpeed"/>

    <EditText
        android:id="@+id/getcurspeed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/speed"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal"
        android:focusable="true"/>


    <Button
        android:id="@+id/setcurspeed"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/maintext"
        android:layout_marginTop="20dp"
        android:background="#ffffff"/>

    <Button
        android:text="Status"
        android:width="100dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="goStatus"/>

    <Button
        android:text="Profile"
        android:width="100dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goProfile"/>

    <Button
        android:text="Settings"
        android:width="100dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="goSettings"/>



</RelativeLayout>
